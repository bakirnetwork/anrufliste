{% extends 'base.twig' %}

{% block content %}

	<div class="col-5 mx-auto p3 mt4 bg-white">
		<p class="center">Wilkommen zur Bakir Immobilien Anruf Liste. Bitte melden Sie sich an.</p>

		<div class="clearfix mt4">

			<form action="{{ form_path }}" method="post">
				<div class="mb2">
					<label for="username">Benutzername</label>
					<input class="field-light full-width" id="username" type="text" name="{{ form_user_name }}">
				</div>
				<div class="mb2">
					<label for="password">Passwort</label>
					<input class="field-light full-width" id="password" type="password" name="{{ form_password_name }}">
				</div>
				<input type="checkbox" name="{{ form_keeplog_name }}" value="on"> Angemeldet bleiben? </input>
				<button class="col-right bg-blue white" type="submit">Anmelden</button>
			</form>

		</div>
	</div>

{% endblock %}
